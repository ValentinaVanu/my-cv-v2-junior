- var sectionTitle = data.portfolio.sectionTitle;
include ../section-title/section-title.pug
.column(span="row")
  .project__type-title
    h3=data.portfolio.recentTitle
    .column(span="row" height="10")
    each project in data.portfolio.recentList
      .project__wrapper
        .project__title=project.title
        .project__languages=project.languages
        .project__img-wrapper
          img.project__img(
            src=`${baseUrl}asset/image/portfolio-img/${project.image}`
            width="100%"
            )
      .project__pink-wrapper
        each pink in project.pinkIcons
          .pink__container
            a(
            class="pink-link"
            href=`${pink.link}`
            target="_blank"
            )
              i(class=`icon__${pink.icon}`)
      .column(span="row")
      .column(span="row" height="10")
